Name: httpcomponents-client
Summary: Apache HTTP components client
Version: @VERSION@
Release: 1.ovirt%{?dist}
License: ASL 2.0
URL: http://hc.apache.org
Source: @SRC@
BuildArch: noarch

Requires: httpcomponents-core
Requires: jakarta-commons-codec
Requires: jakarta-commons-logging
Requires: java >= 1:1.7.0
Requires: jpackage-utils

%description
Apache HTTP components client.

%prep
%setup -q

%build
mvn package -DskipTests

%install
install -d %{buildroot}/%{_javadir}/httpcomponents
install httpclient/target/httpclient-%{version}.jar %{buildroot}%{_javadir}/httpcomponents/httpclient.jar
install httpmime/target/httpmime-%{version}.jar %{buildroot}%{_javadir}/httpcomponents/httpmime.jar

%files
%doc LICENSE.txt
%doc NOTICE.txt
%doc README.txt
%doc RELEASE_NOTES.txt
%{_javadir}/httpcomponents/*

%changelog
* Fri Jan 10 2014 Juan Hernandez <juan.hernandez@redhat.com> - 4.2-1
- Initial version.
